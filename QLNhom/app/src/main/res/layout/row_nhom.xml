<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/ngoinha"
        android:layout_weight="20"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/layout"
        android:layout_weight="60"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/img"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="113001013"
            android:layout_marginLeft="5dp"
            android:gravity=""
            android:textColor="#0015d6"
            android:id="@+id/txttennhom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity=""
            android:layout_marginLeft="5dp"
            android:text="Nguyá»…n Thanh Quan"
            android:textColor="#020680"
            android:id="@+id/txtnhomtruong"/>

    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/layout"
        android:gravity="center"
        android:layout_weight="15"
        android:textColor="#ff0000"
        android:text="10"
        android:id="@+id/txtsoluong"/>
    <ImageView
        android:layout_toRightOf="@+id/txtsoluong"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        android:layout_height="30dp"
        android:id="@+id/ivxoa"/>
</LinearLayout>